<%= render "shared/header" %> 
<% if @cats.present? %> 
  <% @cats.each do |cat| %> 
    <div class="cat-lists">
      <div class="cat-list">
        <%= link_to "/" , class: "cat-link" do %>
          <div class='cat-img-content'>
            <%= image_tag cat.image.variant(resize: '400x380'), class: "cat-img" if cat.image.attached? %>
          </div>
          <div class='cat-info'>
            <h3 class='cat-name'>
              <%= cat.name %>
            </h3>
          </div>
        <% end %> 
      </div>
    </div>   
  <%end%>      
<% end %>